<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@drawable/custom_header_me"
    android:padding="20dp"
    tools:context=".ACTIVITY.AlarmActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_card_me"
            android:fontFamily="@font/helveticaneue_light"
            android:padding="8dp"
            android:text="Time"
            android:textAlignment="center"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/edt_Des_Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_Time"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_card_me"
            android:drawableStart="@drawable/ic_edit"
            android:drawablePadding="10dp"
            android:fontFamily="@font/notosans"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:padding="8dp"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_Des_Time"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_marginEnd="10dp"
                android:id="@+id/button_submit_alarm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_alrm_button"
                android:fontFamily="@font/helveticaneue_light"
                android:text="Alram"
                android:textAllCaps="false"
                android:textSize="19sp" />

            <Button
                android:id="@+id/button_cancel_alarm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_alrm_button"
                android:fontFamily="@font/helveticaneue_light"
                android:text="Cancel Alarm"
                android:textAllCaps="false"
                android:textSize="19sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>