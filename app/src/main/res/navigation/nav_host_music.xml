<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host_music"
    app:startDestination="@id/splashMusicFragment">

    <fragment
        android:id="@+id/splashMusicFragment"
        android:name="com.example.easyday.FRAGMENT.music.SplashMusicFragment"
        android:label="SplashMusic"
        tools:layout="@layout/fragment_splash_music">
        <action
            android:id="@+id/ActionToHomeMusic"
            app:destination="@id/actionToHomeMusic"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_close_exit" />
    </fragment>
    <fragment
        android:id="@+id/actionToHomeMusic"
        android:name="com.example.easyday.FRAGMENT.music.HomeMusicFragment"
        android:label="FragnentHomeMusic"
        tools:layout="@layout/fragment_home_music" />
